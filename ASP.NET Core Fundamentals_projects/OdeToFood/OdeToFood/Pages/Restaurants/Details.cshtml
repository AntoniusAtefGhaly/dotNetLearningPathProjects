
@page "{Id:int}"
@model OdeToFood.Pages.Restaurants.DetailsModel
@{
  
}

<h1>Details</h1>
<div>
    <div> ID : @Model.Restaurant.Id</div>
    <div> Name : @Model.Restaurant.Name</div>
    <div> Location : @Model.Restaurant.Location</div>
    <div> Cuisine : @Model.Restaurant.Cuisine</div>
    <div>
        <a asp-page="./List" class="btn btn-info">All restaurant</a>
    </div>
    @if(Model.Message != null)
    {
        <div class="alert alert-danger">
            @Model.Message
        </div>
    }
</div>